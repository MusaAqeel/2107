{
    "version": 2,
    "framework": "nextjs",
    "buildCommand": "pnpm run build",
    "installCommand": "pnpm install",
    "builds": [
        {
            "src": "next.config.js",
            "use": "@vercel/next"
        },
        {
            "src": "app/api/**/*.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.10",
                "requirementsPath": "./requirements.txt"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/generate",
            "dest": "app/api/main.py"
        },
        {
            "src": "/api/playlist",
            "dest": "app/api/main.py"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ],
    "env": {
        "PYTHONPATH": "app/api"
    }
}
