{
    "version": 2,
    "framework": "nextjs",
    "builds": [
        {
            "src": "app/api/**/*.py",
            "use": "@vercel/python"
        },
        {
            "src": "package.json",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        {
            "src": "/api/generate",
            "dest": "app/api/main.py"
        },
        {
            "src": "/api/playlist",
            "dest": "app/api/main.py"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ],
    "env": {
        "PYTHONPATH": "app/api"
    }
}
